algoritmo "exercicio_A6_1"
declare
a,b:real
inicio
escreva("entre com o primeiro número: ")
leia(a)
escreva("entre com o segundo número: ")
leia(b)

escreva("A média é: ",a+b/2)
fimalgoritmo





algoritmo "exercicio_A6_2"
declare 
x,y: real
inicio
escreval ("Calculo da função y(x)=3x+2")
escreva ("Digite um valor para y(x): ")
leia(x)
y <- 3*x+2
escreva ("O Resultado da função é: y(",x," )"," = ",y)
fimalgoritmo


algoritmo "exercicio_A6_3"
declare
consumo_medio,distancia,combustivel:real
inicio
escreva("Distância percorrida em KMs: ")
leia(distancia)
escreva("Combustivel abastecido em litros: ")
leia(combustivel)

consumo_medio <- distancia / combustivel
escreval("O consumo médio é: Km/l ",consumo_medio:2:2)
leia(distancia)
fimalgoritmo
